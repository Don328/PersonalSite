<h3>BlackJack</h3>
Bank: @playerBank

<EditForm Model=wager>
    <InputNumber @bind-Value=wager />
    <button type="submit" @onclick=Deal>Deal</button>
</EditForm>
@message

<div class="row">
    <div class="col">
        <h5>Player</h5>
        @foreach (var card in playerHand)
        {
            <PlayingCard Card=card/>
        }
    </div>
    <div class="col">
        <h5>Dealer</h5>
        @if (handIsActive)
        {
            @for (int i = 0; i < dealerHand.Count; i++)
            {
                if (i>0)
                {
                    <PlayingCard Card=dealerHand[i] />
                }
            }
        }
        else
        {
            @foreach(var card in dealerHand)
            {
                <PlayingCard Card=card/>
            }
        }
    </div>
</div>
@if (handIsActive)
{
    <div class="row">
        <button class="btn" @onclick=EndHand>EndHand</button>
    </div>
}

