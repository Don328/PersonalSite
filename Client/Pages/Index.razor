@page "/"
@inject NavigationManager NavMan;

<PageTitle>Donavan Olsen</PageTitle>
<MarkdownView FromUrl="/markdown/welcome.md" />
<div class="col">
    <div class="row">
        <div class="col" style="width:100%">
            For information about how this site is built and hosted, click the <code>about</code> link in the upper right corner of the window.
            <i class="fa-solid fa-2xl fa-hand-point-up fa-rotate-by" style="--fa-rotate-angle:45deg;color:var(--primaryGray);margin-left:.5em;color:var(--primaryGreenDark);"></i>
        </div>

    </div>
</div>

@code {
    [CascadingParameter]
    public AppState AppState { get; set; }

    [CascadingParameter] public IModalService? Modal { get; set; }

    private ModalOptions modalOptions = new()
        {
            Position = ModalPosition.TopLeft,
            Animation = ModalAnimation.FadeInOut(1),
            HideHeader = true
        };

    protected override async Task OnInitializedAsync()
    {
        if (!AppState.AcceptedTOS)
        {
            var accepted = await ShowGDPRNotification();
            if (accepted)
            {
                AppState.AcceptedTOS = true;
            }

            NavMan.NavigateTo("/");
        }



        await Task.CompletedTask;
    }

    private async Task<bool> ShowGDPRNotification()
    {
        bool accepted;

        var gdpr = Modal.Show<GDPRNotice>();
        var result = await gdpr.Result;

        if (result.Cancelled)
        {
            accepted = false;
        }
        else
        {
            accepted = true;
        }

        return await Task.FromResult(accepted);
    }
}